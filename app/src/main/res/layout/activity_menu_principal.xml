<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MenuPrincipal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uni-Events"
        android:textSize="48dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:textColor="@color/blue">

    </TextView>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/unicda_logo">

    </ImageView>

    <Button
        android:id="@+id/btnCulturalEvents"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/red_1"
        android:text="Eventos Culturales"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="42dp">

    </Button>

    <Button
        android:id="@+id/btnAcademicEvents"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/red_1"
        android:text="Eventos Académicos"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="42dp">

    </Button>

    <Button
        android:id="@+id/btnCampusMap"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/red_1"
        android:text="Mapa del Campus"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="42dp">

    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App created by Pedro Ramírez"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic">

    </TextView>

</LinearLayout>